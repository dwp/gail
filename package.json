{
  "name": "a-cubed-new-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:https": "nodemon httpsServer.js",
    "build": "next build",
    "start": "node .next/standalone/server.js",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:notest": "jest --passWithNoTests",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,mdx,css,scss,yaml,yml,json}\"",
    "check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,mdx,css,scss,yaml,yml,json}\"",
    "prepare": "husky",
    "localbuild": "docker build --no-cache --platform linux/amd64 -t dwpaskfe-local:latest ."
  },
  "dependencies": {
    "autoprefixer": "10.4.22",
    "dompurify": "3.3.0",
    "govuk-frontend": "5.13.0",
    "markdown-to-jsx": "7.7.17",
    "next": "16.0.10",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sass": "1.94.2",
    "sass-loader": "16.0.6",
    "undici": "7.16.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.39.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "8.48.0",
    "@typescript-eslint/parser": "8.48.0",
    "eslint": "9.39.1",
    "eslint-config-next": "16.0.3",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "husky": "9.1.7",
    "identity-obj-proxy": "3.0.0",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "nodemon": "3.1.11",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "whatwg-fetch": "3.6.20"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run check",
      "npm run lint",
      "npm run type-check",
      "npm run test:notest"
    ]
  }
}
